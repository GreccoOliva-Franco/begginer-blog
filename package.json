{
	"name": "beginner-blog",
	"version": "1.0.0",
	"description": "Similar blog to Free Code Camp Blogs (https://www.freecodecamp.org/news/tag/blog/)",
	"main": "dist/index.js",
	"scripts": {
		"prebuild": "npm run clearDistDirectory",
		"build": "etsc",
		"prestart": "npm run build",
		"start": "node .",
		"dev": "nodemon -L",
		"clearDistDirectory": "rimraf dist",
		"migrate": "npm run typeorm migration:run",
		"syncDb": "npm run typeorm schema:sync",
		"typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/GreccoOliva-Franco/beginner-blog.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/GreccoOliva-Franco/beginner-blog/issues"
	},
	"homepage": "https://github.com/GreccoOliva-Franco/beginner-blog#readme",
	"dependencies": {
		"bcrypt": "^5.0.1",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"helmet": "^4.6.0",
		"joi": "^17.4.2",
		"morgan": "^1.10.0",
		"mysql": "^2.18.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"ts-node": "^10.4.0",
		"typeorm": "^0.2.39",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/node": "^16.11.7",
		"@types/nodemailer": "^6.4.4",
		"@types/reflect-metadata": "^0.1.0",
		"@typescript-eslint/eslint-plugin": "^5.3.1",
		"@typescript-eslint/parser": "^5.3.1",
		"esbuild": "^0.13.13",
		"esbuild-node-tsc": "^1.8.0",
		"eslint": "^8.2.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"nodemailer": "^6.7.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.4.1",
		"typescript": "^4.4.4"
	}
